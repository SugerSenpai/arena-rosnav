<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <!-- TODO capture actual args -->
    <arg name="args" default="" />

    <arg name="env" />
    <arg name="robot" />

    <remap from="move_base_flex/local_costmap/get_dump" to="$(arg env)/$(arg robot)/move_base_flex/local_costmap/get_dump" />

    <node name="train_agent"
        type="train_agent.py"
        pkg="training"
        args="$(arg args)"
    >
        <rosparam file="$(find arena_bringup)/configs/task_generator.yaml" command="load" ns="configuration"/>
    </node>
</launch>
